{
  "server": [
    {
      "host": "localhost",
      "port": 3000,
      "secure": {
        "cert": "ssl/cert.pem",
        "key": "ssl/key.pem"
      },
      "healthcheck": null
    }
  ],
  "firewall": {
    "base": "/registry",
    "registry": "https://registry.npmmirror.com",
    "rules": [
      {
        "policy": "allow",
        "org": "@qiwi"
      },
      {
        "policy": "allow",
        "org": "@antongolub"
      },
      {
        "policy": "deny",
        "name": "colors",
        "version": ">= v1.3.0"
      },
      {
        "policy": "allow",
        "name": "d",
        "version": "< 1.0.0"
      },
      {
        "policy": "allow",
        "_dateRange": ["2010-01-01T00:00:00.000Z", "2025-01-01T00:00:00.000Z"]
      }
    ]
  }
}
